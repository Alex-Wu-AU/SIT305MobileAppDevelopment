<!-- res/drawable/progress_bar_drawable.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/white"/> <!-- Change the color as needed -->
        </shape>
    </item>

    <!-- Progress track -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/yellow"/> <!-- Change the color as needed -->
            </shape>
        </clip>
    </item>
</layer-list>

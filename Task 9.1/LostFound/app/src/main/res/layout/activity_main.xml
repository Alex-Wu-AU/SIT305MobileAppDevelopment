<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <Button
        android:id="@+id/create_advert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a New Advert" />

    <Button
        android:id="@+id/show_items_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show All Lost Found Items"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/show_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show on Map"
        android:layout_below="@id/show_items_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</LinearLayout>
